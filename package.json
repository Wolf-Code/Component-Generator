{
	"name": "componentgenerator",
	"displayName": "ComponentGenerator",
	"description": "Generates all files required for creating a component",
	"version": "0.0.4",
	"publisher": "kevin-deelen",
	"repository": {
		"url": "https://github.com/Wolf-Code/Component-Generator"
	},
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:componentgenerator.generateComponent"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "componentgenerator.generateComponent",
				"title": "Generate component"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "componentgenerator.generateComponent"
				}
			]
		},
		"configuration": [
			{
				"title": "Templates",
				"properties": {
					"templates.path": {
						"type": "string",
						"description": "The path to the directory containing all templates"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/vscode": "^1.48.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	}
}